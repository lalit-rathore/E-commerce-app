<h1 class="mb-4 text-center"> E-Commerce Admin Dashboard</h1>
<div class="text-end m-5"><p>User: <%= current_user.email %></p></div>

<div class="container">
  <div class="row mb-4">
   <div class="col-md-4 offset-md-4">
     <div class="card text-center">
       <div class="card-body">
         <h5 class="card-title">Number of Order</h5>
         <p class="card-text fs-4"><%= @order_count %></p>
       </div>
      </div>
     </div>
     <%= link_to "Back", products_path %>
   </div>

  <div class="row">
    <h3>Recent Products</h3>
    <ul class="list-group">
      <% @recent_product.each do |product| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= product.name %></span>
          <span class="badge bg-primary rounded-pill">
            $<%= product.price %>
            </span>  
        </li>
      <% end %>
    </ul>
  </div>

  <div class="row mt-3 ">
    <h3>Total User: <%= @user.count%> </h3>
    
    <ul class="list-group">
      <% @user.each do |user| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= user.email %>   
          </li>
      <% end %>
    </ul>
  </div>

</div>

