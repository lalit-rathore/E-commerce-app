<h1 class="mb-4 text-center">E-Commerce Admin Dashboard</h1>
<div class="text-end m-3">
  <p>User: <%= current_user.email %></p>
</div>

<div class="container">

  <div class="row text-center mb-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Number of Orders</h5>
          <p class="card-text fs-4"><%= @order_count %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Users</h5>
          <p class="card-text fs-4"><%= @user.count %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4 d-flex align-items-center justify-content-center">
      <%= link_to "Back to Products", products_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <h3>Recent Products</h3>
      <ul class="list-group">
        <% @recent_product.each do |product| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= product.name %></span>
            <div>
              <span class="badge bg-primary rounded-pill me-3">$<%= product.price %></span>
              <%= link_to "View", product_path(product), class: 'btn btn-sm btn-primary' %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <h3>All Users</h3>
      <ul class="list-group">
        <% @user.each do |user| %>
          <li class="list-group-item"><%= user.email %></li>
        <% end %>
      </ul>
    </div>
  </div>

</div>


