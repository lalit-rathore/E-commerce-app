<nav class="navbar navbar-light text-black fixed-top " style="background-color: #e3f2fd;" >
  <h1 class="p-1">Products</h1>

  <div class="d-flex justify-content-center">
  <%= form_tag("/products", method: "get") do %>
     <%= label_tag(:title, "Search for:") %>
     <%= text_field_tag(:name, params[:name]) %>
     <%= submit_tag("Search") %>
  <% end %>
</div>

  <% if user_signed_in? %>
    <div class="btn">
     <%= button_to "Logout" , destroy_user_session_path, method: :delete ,data: {turbo_method: :delete} %>
     </div>

  <% else %>
    <div class="d-flex justity-content-center align-items-center gap-3  p-2">
      <button type="button" class="btn btn-outline-primary btn-sm"> <%= link_to "Login", new_user_session_path, class: 'text-dark text-decoration-none' %></button>
      <button type="button" class="btn btn-outline-secondary btn-sm"><%= link_to "Sign up", new_user_registration_path, class: 'text-dark text-decoration-none' %></button>
    </div>
  <%end%>
</nav>

<div class="d-flex justify-content-around mt-5">
  <% if current_user&.admin? %>
     <div >
     <button type="button" class="btn btn-primary"> <%= link_to "New Product", new_product_path, class: 'text-black text-decoration-none'%></button> 
     
     </div>
     <% end %>
     
     <button type="button" class="btn btn-primary"> <%= link_to "show cart item" ,cart_path, class: 'text-black text-decoration-none' %></button> 
 
</div>

<ul class="d-flex flex-wrap justify-content-center list-unstyled ">
  <% @products.each do |product| %>
    <div class="card m-3 text-first" style="width: 350px">
       <li class="m-3 p-4">
         <% if product.image.attached? %>
            <div>
              <%= image_tag product.image, style: "max-width: 250px"%>
            </div>
         <%end%>
          <h5 class="card-title"> <%= link_to product.name, product_path(product), class:"text-decoration-none" %></h5>
           Price: <%= number_to_currency(product.price) %><br>
          Description: <%= truncate(product.description, length: 100) %>
    
           <%= form_with url: cart_items_path do %>
              <%= hidden_field_tag :product_id , product.id%>
              <%= number_field_tag :quantity ,1, min: 1 ,style: "width:40px;"%>
              <%= submit_tag "Add to cart" %>
           <%end%>
        
          <div class=" mt-3">
            <button type="button" class="btn btn-primary btn-sm btn-block"> <%= link_to "Buy Now", buy_product_path(product), method: :get,class:"text-decoration-none text-black " %></button
          </div>

         <% if current_user&.admin? %>
          <br>
             <%= link_to 'Edit', edit_product_path(product) %> |
            <%= link_to 'Delete', product_path(product), method: :delete, data: {turbo_method: :delete} %>
        <% end %>
       </li>
    </div>
  <% end %>
</ul>