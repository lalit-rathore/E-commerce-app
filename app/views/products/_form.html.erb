<div class="container w-50">
<%= form_with(model: product, local: true, html: {multipart: true}) do |form| %>
  
  <div class="card  d-flex align-items-center m-5">
    <div class="mt-3">
         <%= form.label :category_id, "Category" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Select Category" %>
    </div>

    <div class="mb-3">
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
  
    <div class="mb-3">
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </div>
  
    <div class="mb-3">
      <%= form.label :price %><br>
      <%= form.number_field :price, step: 0.01 %>
    </div class="mb-3">

    <div class="mb-3">
      <%= form.label :image %><br>
      <%= form.file_field :image%>
    </div>

    <div class="mb-3">
      <%= form.submit %>
    </div>
    
  </div>  
  <%end%>
</div>
  